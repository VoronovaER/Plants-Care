<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/plant_item"
    android:layout_width="300dp"
    android:layout_height="140dp"
    android:layout_gravity="center_horizontal">

    <ImageView
        android:id="@+id/plant_image"
        android:layout_width="125dp"
        android:layout_height="125dp"
        android:layout_marginStart="20dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:srcCompat="@tools:sample/avatars" />

    <TextView
        android:id="@+id/plant_item_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:maxLength="15"
        android:text="TextView"
        android:textColor="@color/main_green"
        android:textSize="20sp"
        android:textStyle="bold"
        app:layout_constraintStart_toEndOf="@+id/plant_image"
        app:layout_constraintTop_toTopOf="@+id/plant_image" />

    <TextView
        android:id="@+id/plant_item_type"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:text="TextView"
        android:textColor="@color/main_green"
        android:textSize="16sp"
        app:layout_constraintStart_toStartOf="@+id/plant_item_name"
        app:layout_constraintTop_toBottomOf="@+id/plant_item_name" />

</androidx.constraintlayout.widget.ConstraintLayout>